<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69e2dd"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00BDC4"
        android:id="@+id/ll_item">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="hora - Titulo"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!--<TextView
            android:id="@+id/tv_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="horario"/>-->

        <TextView
        android:id="@+id/tv_palestrante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2.5dp"
        android:textColor="#fff"
        android:text="palestrante"/>

        <TextView
            android:id="@+id/tv_descricao_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:textColor="#fff"
            android:text="descrição intro"
            android:maxLines="1"
            android:visibility="invisible"/>

        <!--<TextView
            android:id="@+id/tv_descricao_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:textColor="#fff"
            android:text="descrição full"/>-->

    </LinearLayout>

</LinearLayout>